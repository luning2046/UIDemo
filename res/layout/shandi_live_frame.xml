    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 复用代码，修改一处对应所有的头都有修改操作 -->

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_title_bar" />
    <!-- 这是顶部bane图的和大按钮的位置 -->

    
    <ListView
