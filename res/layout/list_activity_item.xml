<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="205.5dp"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp" 
        >

        <ImageView
            android:id="@+id/iv_go_web"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_huodong"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/iv_go_web"
            android:layout_alignParentLeft="true"
            android:background="#44000000" 
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/tv_shop_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加载中..."
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"/>
        </LinearLayout>

		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_marginLeft="10dp"
		    android:layout_marginRight="10dp"
		    android:layout_alignParentBottom="true"
		    android:layout_alignParentLeft="true"
		    android:layout_below="@+id/iv_go_web"
		    >
			<TextView 
			    android:id="@+id/tv_shop_name"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="10dp"
			    android:text="加载中..."
			    android:layout_gravity="center_vertical"
			    android:textColor="@color/black"
			    android:textSize="14sp"/>

			<TextView
			    android:id="@+id/tv_shop_time"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true"
			    android:layout_marginTop="10dp"
			    android:text="加载中..."
			    android:textColor="@color/gray_background"
			    android:textSize="14sp" />

		</RelativeLayout>

    </RelativeLayout>
	
</LinearLayout>